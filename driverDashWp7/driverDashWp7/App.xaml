<Application 
    x:Class="driverDashWp7.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"       
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:core="clr-namespace:System;assembly=mscorlib"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone">

    <!--Application Resources-->
    <Application.Resources>
        <core:String x:Key="AppName">driverDash</core:String>
        <SolidColorBrush x:Key="BackgroundColor">Transparent</SolidColorBrush>
        <FontFamily x:Key="Font1">Assets/Helvetica_Neue_Light.ttf#Helvetica Neue Light</FontFamily>
        <FontFamily x:Key="Font2">Assets/Helvetica_Neue_Ultra_Light.ttf#Helvetica Neue Ultra Light</FontFamily>

        <Style x:Key="CustomTextStyle1" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource Font2}"/>
            <Setter Property="FontSize" Value="60"/>
            <Setter Property="Foreground" Value="{StaticResource PhoneForegroundBrush}"/>
            <Setter Property="Margin" Value="{StaticResource PhoneHorizontalMargin}"/>
        </Style>

        <Style x:Key="CustomTextStyle2" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource Font1}"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Foreground" Value="{StaticResource PhoneForegroundBrush}"/>
            <Setter Property="Margin" Value="{StaticResource PhoneHorizontalMargin}"/>
        </Style>
    </Application.Resources>

    <Application.ApplicationLifetimeObjects>
        <!--Required object that handles lifetime events for the application-->
        <shell:PhoneApplicationService 
            Launching="Application_Launching" Closing="Application_Closing" 
            Activated="Application_Activated" Deactivated="Application_Deactivated"/>
    </Application.ApplicationLifetimeObjects>

</Application>